<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.einstein.intelligence.dao.UserWalletDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.einstein.intelligence.entity.po.UserWallet">
        <id column="user_id" property="userId"/>
        <result column="total_amount" property="totalAmount"/>
        <result column="balance_amount" property="balanceAmount"/>
        <result column="integral" property="integral"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="creator" property="creator"/>
        <result column="update_time" property="updateTime"/>
        <result column="updater" property="updater"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        user_id, total_amount, balance_amount, integral, status, create_time, creator, update_time, updater
    </sql>
    <select id="selectByUserId" resultType="com.einstein.intelligence.entity.po.UserWallet">
        select
        <include refid="Base_Column_List"/>
        FROM biz_user_wallet WHERE user_id = #{userId} LIMIT 1
    </select>

</mapper>
